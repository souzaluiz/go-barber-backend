{
	"env": {
		"es2021": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"airbnb-base",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
    "prettier"
	],
	"rules": {
    "prettier/prettier": "error",
    "class-methods-use-this": "off",
		"import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
	},
	"settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
